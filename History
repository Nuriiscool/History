<style>
body {
    font-family: Arial, sans-serif;
    background: #111;
    color: #fff;
    margin: 0;
    padding: 20px;
}
h1 {
    text-align: center;
}
.grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 15px;
}
.card {
    background: #1e1e1e;
    border-radius: 10px;
    padding: 15px;
}
.question {
    font-weight: bold;
    margin-bottom: 10px;
}
button {
    width: 100%;
    margin: 5px 0;
    padding: 8px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    background: #333;
    color: white;
}
button.correct {
    background: #2ecc71;
}
button.wrong {
    background: #e74c3c;
}
</style>
